{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*/dist": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.exclude": {},
  "cssVariables.languages": ["css"],
  "cssVariables.lookupFiles": [
    "**/*.module.css",
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "apps/frontend/node_modules/@mantine/core/styles.css"
  ],
  "files.associations": {
    "*.css": "postcss"
  }
}
